{
  "name": "ims-ghana",
  "private": true,
  "scripts": {
    "start": "meteor run --exclude-archs web.browser.legacy,web.cordova --settings private/env/dev/settings.json",
    "eslint": "eslint . --fix",
    "prettier": "prettier --write \"**/*.js\"",
    "check": "npm run eslint && npm run prettier",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@babel/runtime": "^7.20.1",
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.13",
    "@react-icons/all-files": "^4.1.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "aos": "^2.3.4",
    "autoprefixer": "^10.4.13",
    "axios": "^1.1.3",
    "cloudinary": "^1.32.0",
    "cloudinary-core": "^2.13.0",
    "cors": "^2.8.5",
    "formik": "^2.2.9",
    "isomorphic-unfetch": "^3.1.0",
    "jquery": "^3.6.1",
    "meteor-node-stubs": "^1.2.5",
    "meteor-s3up": "^2.0.0",
    "postcss": "^8.4.19",
    "postcss-load-config": "^4.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.6.0",
    "react-router-dom": "^6.4.3",
    "react-share": "^4.4.1",
    "simpl-schema": "^1.13.1",
    "tailwind-scrollbar-hide": "^1.1.7",
    "tailwindcss": "^3.2.4",
    "yup": "^0.32.11"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "devDependencies": {
    "@quave/eslint-config-quave": "^1.0.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.7",
    "@types/aos": "^3.0.4",
    "@types/meteor": "^2.8.1",
    "@types/meteor-astronomy": "^2.6.7",
    "@types/meteor-mdg-validated-method": "^1.2.5",
    "@types/mocha": "^10.0.0",
    "@types/react-dom": "^18.0.8",
    "@types/simpl-schema": "^1.12.3",
    "postcss": "^8.4.19",
    "prettier": "^2.7.1"
  },
  "eslintConfig": {
    "extends": [
      "@quave/quave"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "meteor npm test && lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
